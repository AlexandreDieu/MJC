{% extends 'base.html.twig' %}

{% block body %}
	<main>
		<h1>Liste des événements</h1>
		<table class="table container">
			<thead class="tableHead">
				<tr class="text-light">
					<th>Id</th>
					<th>Lieu</th>
					<th>DateHeure</th>
					<th>Img</th>
					<th>Nom</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for evenement in evenements %}
					<tr>
						<td>{{ evenement.id }}</td>
						<td>{{ evenement.lieu }}</td>
						<td>{{ evenement.dateHeure ? evenement.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ evenement.img }}</td>
						<td>{{ evenement.nom }}</td>
						<td>
							<a href="{{ path('evenement_show', {'id': evenement.id}) }}"><i class="far fa-eye"></i></a>
							<a href="{{ path('evenement_edit', {'id': evenement.id}) }}"><i class="fas fa-edit"></i></a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('evenement_new') }}">Ajouter Evénement</a>
	</main>
{% endblock %}
