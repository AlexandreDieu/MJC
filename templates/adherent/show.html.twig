{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<main>
		<h1>User</h1>
		<table class="table container">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>IsVerified</th>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ user.prenom }}</td>
				</tr>
				<tr>
					<th>Telephone</th>
					<td>{{ user.telephone }}</td>
				</tr>
				<tr>
					<th>Newsletter</th>
					<td>{{ user.newsletter ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>SecuriteSociale</th>
					<td>{{ user.securiteSociale }}</td>
				</tr>
			</tbody>
		</table>
		<a class="btn btn-primary" href="{{ path('adherent_index') }}">Revenir Ã  la liste</a>

		<a class="btn btn-secondary" href="{{ path('adherent_edit', {'id': user.id}) }}">Modifier</a>

		{{ include('adherent/_delete_form.html.twig') }}
	</main>
{% endblock %}
