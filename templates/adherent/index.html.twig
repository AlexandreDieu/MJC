{% extends 'base.html.twig' %}

{% block body %}
	<main>
		<h1>Listes des adhérents</h1>
			<table class="table container">
				<thead class="tableHead">
					<tr class="text-light">
						<th>Securité Sociale</th>
						<th>Nom</th>
						<th>Prénom</th>
						<th>Email</th>
						<th>Telephone</th>
						<th>Statut d'inscription</th>
						<th>Newsletter</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.securiteSociale }}</td>
							<td>{{ user.nom }}</td>
							<td>{{ user.prenom }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.telephone }}</td>
							<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
							<td>{{ user.newsletter ? 'Yes' : 'No' }}</td>
							<td>
								<a href="{{ path('adherent_show', {'id': user.id}) }}">
									<i class="fas fa-eye"></i>
								</a>
								|
								<a href="{{ path('adherent_edit', {'id': user.id}) }}">
									<i class="fas fa-edit"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="12">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		<a class="btn btn-primary" href="{{ path('adherent_new') }}">Ajouter un adhérent</a>
	</main>

	<script src="https://kit.fontawesome.com/433f9c0cfe.js" crossorigin="anonymous"></script>

{% endblock %}
