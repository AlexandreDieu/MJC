{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}
{% block body %}
	<main>
		<h1>Listes des adh√©rents</h1>

		<table class="table tableGestion">
			<thead class="tableHead">
				<tr>
					<th>SecuriteSociale</th>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Telephone</th>
					<th>IsVerified</th>
					<th>Newsletter</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.securiteSociale }}</td>
						<td>{{ user.nom }}</td>
						<td>{{ user.prenom }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.telephone }}</td>
						<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
						<td>{{ user.newsletter ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('adherent_show', {'id': user.id}) }}">
								<i class="far fa-eye"></i>
							</a>
							<a href="{{ path('adherent_edit', {'id': user.id}) }}">
								<i class="fas fa-edit"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="12">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('adherent_new') }}">Create new</a>
	</main>

	<script src="https://kit.fontawesome.com/433f9c0cfe.js" crossorigin="anonymous"></script>

{% endblock %}
