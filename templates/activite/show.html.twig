{% extends 'base.html.twig' %}

{% block title %}Activite
{% endblock %}

{% block body %}
	<main>
		<h1>Activite</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ activite.id }}</td>
				</tr>
				<tr>
					<th>Lieu</th>
					<td>{{ activite.lieu }}</td>
				</tr>
				<tr>
					<th>DateHeure</th>
					<td>{{ activite.dateHeure ? activite.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Img</th>
					<td>{{ activite.img }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ activite.nom }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('activite_index') }}">back to list</a>

		<a href="{{ path('activite_edit', {'id': activite.id}) }}">edit</a>

		{{ include('activite/_delete_form.html.twig') }}
	</main>
{% endblock %}
